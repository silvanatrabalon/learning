.start-learning {  min-height: 100vh;  width: 100%;  background: var(--bg-secondary);  display: flex;  flex-direction: column;}.learning-header {  background: var(--bg-primary);  border-bottom: 1px solid var(--color-gray-200);  padding: var(--space-4) var(--space-8);  display: flex;  align-items: center;  justify-content: space-between;  position: sticky;  top: 0;  z-index: var(--z-dropdown);  box-shadow: var(--shadow-sm);}.header-controls {  display: flex;  align-items: center;  gap: var(--space-4);}.desktop-language-toggle {  display: block;}.back-button {  color: var(--color-primary);  text-decoration: none;  font-weight: 500;  transition: all var(--transition-base);  display: flex;  align-items: center;  justify-content: center;  padding: var(--space-2);  border-radius: var(--radius-md);  background: transparent;  border: 1px solid transparent;  gap: var(--space-2);}.back-button:hover {  color: var(--color-primary-dark);  background: rgba(102, 126, 234, 0.1);  border-color: rgba(102, 126, 234, 0.2);  transform: translateX(-2px);}.back-button svg {  transition: transform var(--transition-base);}.back-button:hover svg {  transform: translateX(-2px);}.learning-header h1 {  margin: 0;  color: var(--text-primary);  font-size: clamp(var(--text-lg), 2.5vw, var(--text-2xl));  font-weight: 700;}/* Layout Container */.learning-container {  display: grid;  grid-template-columns: minmax(280px, 320px) 1fr;  min-height: calc(100vh - 80px);  width: 100%;  gap: 0;}.sidebar {  background: var(--bg-primary);  border-right: 1px solid var(--color-gray-200);  padding: var(--space-6);  overflow-y: auto;  box-shadow: var(--shadow-sm);}.main-content {  padding: var(--space-8);  overflow-y: auto;  display: flex;  flex-direction: column;  max-width: 100%;}/* Content Components */.search-results {  background: var(--bg-primary);  border-radius: var(--radius-lg);  padding: var(--space-6);  margin-bottom: var(--space-8);  box-shadow: var(--shadow-md);  border: 1px solid var(--color-gray-200);}.search-results h3 {  margin-top: 0;  margin-bottom: var(--space-4);  color: var(--text-primary);  font-size: var(--text-xl);  font-weight: 600;}.search-result-item {  display: flex;  justify-content: space-between;  align-items: center;  padding: var(--space-4) 0;  border-bottom: 1px solid var(--color-gray-200);  gap: var(--space-4);}.search-result-item:last-child {  border-bottom: none;}.search-result-item h4 {  margin: 0;  color: var(--text-primary);  font-size: var(--text-base);  font-weight: 500;  flex-grow: 1;}.select-concept-btn {  background: var(--color-primary);  color: var(--text-inverse);  border: none;  padding: var(--space-2) var(--space-4);  border-radius: var(--radius-md);  cursor: pointer;  font-weight: 500;  font-size: var(--text-sm);  transition: all var(--transition-base);  white-space: nowrap;  flex-shrink: 0;}.select-concept-btn:hover {  background: var(--color-primary-dark);  transform: translateY(-1px);}.concept-display {  background: var(--bg-primary);  border-radius: var(--radius-lg);  padding: var(--space-8);  box-shadow: var(--shadow-md);  border: 1px solid var(--color-gray-200);}.concept-actions {  margin-bottom: var(--space-6);  padding-bottom: var(--space-4);  border-bottom: 1px solid var(--color-gray-200);}.example-toggle-btn {  background: var(--color-secondary);  color: var(--text-inverse);  border: none;  padding: var(--space-3) var(--space-6);  border-radius: var(--radius-md);  cursor: pointer;  font-weight: 500;  font-size: var(--text-base);  transition: all var(--transition-base);}.example-toggle-btn:hover {  background: var(--color-secondary-dark);  transform: translateY(-1px);}.welcome-message {  background: var(--bg-primary);  border-radius: var(--radius-lg);  padding: var(--space-10);  box-shadow: var(--shadow-md);  text-align: center;  border: 1px solid var(--color-gray-200);  max-width: 600px;  margin: 0 auto;}.welcome-message h2 {  color: var(--text-primary);  margin-bottom: var(--space-4);  font-size: clamp(var(--text-xl), 3vw, var(--text-3xl));  font-weight: 600;}.welcome-message p {  color: var(--text-secondary);  margin-bottom: var(--space-8);  font-size: var(--text-lg);  line-height: 1.6;}.topic-preview {  text-align: left;  background: var(--bg-secondary);  padding: var(--space-6);  border-radius: var(--radius-md);  border-left: 4px solid var(--color-primary);  margin-top: var(--space-4);}/* Markdown Content Styling */.markdown-content {  line-height: 1.7;  color: var(--text-primary);}.markdown-content h1,.markdown-content h2,.markdown-content h3 {  color: var(--text-primary);  margin-top: var(--space-8);  margin-bottom: var(--space-4);  font-weight: 600;}.markdown-content h1 {  font-size: clamp(var(--text-xl), 3vw, var(--text-3xl));}.markdown-content h2 {  font-size: clamp(var(--text-lg), 2.5vw, var(--text-2xl));}.markdown-content h3 {  font-size: clamp(var(--text-base), 2vw, var(--text-xl));}.markdown-content h1:first-child,.markdown-content h2:first-child,.markdown-content h3:first-child {  margin-top: 0;}.markdown-content p {  color: var(--text-secondary);  margin-bottom: var(--space-4);  font-size: var(--text-base);  line-height: 1.7;}.markdown-content strong {  color: var(--text-primary);  font-weight: 600;}.markdown-content pre {  background: var(--color-gray-800);  color: var(--color-gray-100);  padding: var(--space-4);  border-radius: var(--radius-md);  overflow-x: auto;  margin: var(--space-4) 0;  font-size: var(--text-sm);  line-height: 1.5;}.markdown-content code {  background: var(--color-gray-100);  color: var(--text-primary);  padding: var(--space-1) var(--space-2);  border-radius: var(--radius-sm);  font-size: 0.9em;  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;}.markdown-content pre code {  background: transparent;  color: inherit;  padding: 0;}.markdown-content ul,.markdown-content ol {  margin-bottom: var(--space-4);  padding-left: var(--space-6);}.markdown-content li {  margin-bottom: var(--space-2);  color: var(--text-secondary);}/* Responsive Design *//* Hide MobileMenu on desktop */@media (min-width: 821px) {  .mobile-menu-container {    display: none;  }}/* Tablet Layout */@media (min-width: 641px) and (max-width: 820px) {  .learning-header {    padding: var(--space-4) var(--space-6);  }    .learning-header h1 {    font-size: var(--text-xl);  }    .header-controls {    gap: var(--space-3);  }    .learning-container {    grid-template-columns: 1fr;  }    .sidebar {    display: none;  }    .main-content {    padding: var(--space-6);  }    .desktop-language-toggle {    display: none;  }}/* Mobile Layout */@media (max-width: 640px) {  .learning-header {    padding: var(--space-4);  }    .learning-header h1 {    font-size: var(--text-lg);  }    .header-controls {    gap: var(--space-2);  }    .learning-container {    grid-template-columns: 1fr;  }    .sidebar {    display: none;  }    .main-content {    padding: var(--space-4);  }    .desktop-language-toggle {    display: none;  }    .search-results,  .concept-display,  .welcome-message {    padding: var(--space-4);    margin-bottom: var(--space-6);  }    .welcome-message {    padding: var(--space-6);  }    .search-result-item {    flex-direction: column;    align-items: flex-start;    gap: var(--space-3);  }    .select-concept-btn {    align-self: stretch;    text-align: center;  }    .concept-actions {    margin-bottom: var(--space-4);    padding-bottom: var(--space-3);  }    .example-toggle-btn {    width: 100%;  }    .topic-preview {    padding: var(--space-4);  }    .markdown-content pre {    padding: var(--space-3);    font-size: var(--text-xs);  }    .back-button {    padding: var(--space-1);  }}/* Extra small screens */@media (max-width: 480px) {  .learning-header {    padding: var(--space-3);  }    .main-content {    padding: var(--space-3);  }    .search-results,  .concept-display {    padding: var(--space-3);  }    .welcome-message {    padding: var(--space-4);  }}/* High-resolution displays */@media (min-resolution: 192dpi) {  .learning-header {    border-bottom-width: 0.5px;  }    .sidebar {    border-right-width: 0.5px;  }}/* Accessibility - reduce motion */@media (prefers-reduced-motion: reduce) {  .back-button,  .select-concept-btn,  .example-toggle-btn {    transition: none;  }    .back-button:hover,  .select-concept-btn:hover,  .example-toggle-btn:hover {    transform: none;  }}